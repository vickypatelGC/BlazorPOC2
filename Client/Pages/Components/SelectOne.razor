@using BlazorPOC2.Shared.Models


<InputRadioGroup @bind-Value="@question.Answer">
    @foreach (var option in question.Options)
    {
        <InputRadio Value="option.Text" @oninput="eventArgs=>{ OnSelectOneChanged(option.OptionId, option.Text); }" />
        <span class="px-2"> @option.Text </span>
        <br>
    }
</InputRadioGroup>

